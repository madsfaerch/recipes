---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} â€” Mads' Recipes</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen">
    <header class="border-b border-stone-200 bg-cream/80 backdrop-blur-sm sticky top-0 z-10">
      <nav class="max-w-3xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="font-serif text-xl font-bold text-stone-900 hover:text-spice transition-colors">
          <span data-i18n="recipes">Recipes</span>
        </a>
        <button
          id="lang-toggle"
          type="button"
          class="text-xs font-medium text-stone-400 hover:text-spice transition-colors px-2 py-1 rounded-md hover:bg-stone-100"
          aria-label="Toggle language"
        >
          DA
        </button>
      </nav>
    </header>
    <main class="max-w-3xl mx-auto px-6 py-10">
      <slot />
    </main>
    <footer class="max-w-3xl mx-auto px-6 py-8 border-t border-stone-200">
    </footer>

    <script>
      const translations: Record<string, Record<string, string>> = {
        en: {
          recipes: 'Recipes',
          madeWithGoodTaste: 'Made with good taste',
          backToRecipes: 'Back to recipes',
          prep: 'Prep:',
          cook: 'Cook:',
          by: 'By',
          source: 'Source:',
        },
        da: {
          recipes: 'Opskrifter',
          madeWithGoodTaste: 'Lavet med god smag',
          backToRecipes: 'Tilbage til opskrifter',
          prep: 'Forberedelse:',
          cook: 'Tilberedning:',
          by: 'Af',
          source: 'Kilde:',
        },
      };

      function getLocale(): string {
        return localStorage.getItem('locale') || 'en';
      }

      function applyLocale(locale: string) {
        document.documentElement.lang = locale;
        // Update static i18n elements
        document.querySelectorAll('[data-i18n]').forEach((el) => {
          const key = el.getAttribute('data-i18n')!;
          const t = translations[locale]?.[key];
          if (t) el.textContent = t;
        });
        // Update toggle button text
        const btn = document.getElementById('lang-toggle');
        if (btn) btn.textContent = locale === 'en' ? 'DA' : 'EN';
      }

      // Init
      applyLocale(getLocale());

      document.getElementById('lang-toggle')?.addEventListener('click', () => {
        const next = getLocale() === 'en' ? 'da' : 'en';
        localStorage.setItem('locale', next);
        applyLocale(next);
        window.dispatchEvent(new CustomEvent('locale-changed', { detail: next }));
      });
    </script>
  </body>
</html>
